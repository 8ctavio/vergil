{
	"name": "@8ctavio/vergil",
	"version": "0.15.2",
	"license": "MIT",
	"private": false,
	"description": "Vue Components and Composition Utilities",
	"author": "Octavio Araiza (https://github.com/8ctavio)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/8ctavio/vergil.git",
		"directory": "packages/core"
	},
	"homepage": "https://github.com/8ctavio/vergil",
	"bugs": "https://github.com/8ctavio/vergil/issues",
	"type": "module",
	"scripts": {
		"lint": "oxlint",
		"test": "vitest run",
		"typecheck": "vue-tsc -p ./tsconfig.lib.json --noEmit",
		"dts": "vue-tsc -b ./tsconfig.lib.json && node scripts/dts.js"
	},
	"files": [
		"*.js",
		"components",
		"composables",
		"functions",
		"plugins",
		"reactivity",
		"utilities",
		"types/dist",
		"styles",
		"!styles/color-palette.md"
	],
	"exports": {
		".": {
			"types": "./types/dist/index.d.ts",
			"import": "./index.js"
		},
		"./components": {
			"types": "./types/dist/components/entries/public.d.ts",
			"import": "./components/entries/public.js"
		},
		"./plugins": {
			"types": "./types/dist/plugins/index.d.ts",
			"import": "./plugins/index.js"
		},
		"./utilities": {
			"types": "./types/dist/utilities/entries/public.d.ts",
			"import": "./utilities/entries/public.js"
		},
		"./utilities/userTheme": {
			"types": "./types/dist/utilities/userTheme/index.d.ts",
			"import": "./utilities/userTheme/index.js"
		},
		"./styles": "./styles/main.css",
		"./colors/*": "./styles/colors/*.css",
		"./colors/default": "./styles/default.css"
	},
	"imports": {
		"#vergil": "./vergil.js",
		"#components": "./components/entries/private.js",
		"#composables": "./composables/entries/private.js",
		"#reactivity": "./reactivity/entries/private.js",
		"#functions": "./functions/entries/public.js",
		"#utilities": "./utilities/entries/private.js"
	},
	"dependencies": {
		"@floating-ui/vue": "catalog:consumer"
	},
	"peerDependencies": {
		"vue": "catalog:consumer"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "catalog:",
		"@vue/test-utils": "catalog:",
		"happy-dom": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue-tsc": "catalog:"
	}
}