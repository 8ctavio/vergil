{
	"name": "@8ctavio/vergil",
	"version": "0.15.2",
	"license": "MIT",
	"private": false,
	"description": "Vue Components and Composition Utilities",
	"author": "Octavio Araiza (https://github.com/8ctavio)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/8ctavio/vergil.git",
		"directory": "packages/core"
	},
	"homepage": "https://github.com/8ctavio/vergil",
	"bugs": "https://github.com/8ctavio/vergil/issues",
	"type": "module",
	"scripts": {
		"lint": "oxlint",
		"test": "vitest run",
		"typecheck": "pnpm typecheck:src && pnpm typecheck:tests",
		"typecheck:src": "vue-tsc -p ./tsconfig.src.json --noEmit",
		"typecheck:tests": "vue-tsc -p ./tsconfig.tests.json",
		"dts": "vue-tsc -p ./tsconfig.src.json && node scripts/dts.js"
	},
	"files": ["dts/", "src/", "!src/types/", "!src/styles/color-palette.md"],
	"exports": {
		".": {
			"types": "./dts/index.d.ts",
			"import": "./src/index.js"
		},
		"./components": {
			"types": "./dts/components/entries/public.d.ts",
			"import": "./src/components/entries/public.js"
		},
		"./plugins": {
			"types": "./dts/plugins/index.d.ts",
			"import": "./src/plugins/index.js"
		},
		"./utilities": {
			"types": "./dts/utilities/.entries/public.d.ts",
			"import": "./src/utilities/.entries/public.js"
		},
		"./utilities/userTheme": {
			"types": "./dts/utilities/userTheme/index.d.ts",
			"import": "./src/utilities/userTheme/index.js"
		},
		"./styles": "./src/styles/main.css",
		"./colors/*": "./src/styles/colors/*.css",
		"./colors/default": "./src/styles/default.css"
	},
	"imports": {
		"#vergil": "./src/vergil.js",
		"#components": "./src/components/entries/private.js",
		"#composables": "./src/composables/entries/private.js",
		"#reactivity": "./src/reactivity/entries/private.js",
		"#functions": "./src/functions/entries/public.js",
		"#utilities": "./src/utilities/.entries/private.js",
		"#types": "./src/types/index.ts"
	},
	"dependencies": {
		"@floating-ui/vue": "catalog:consumer"
	},
	"peerDependencies": {
		"vue": "catalog:consumer"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "catalog:",
		"@vue/test-utils": "catalog:",
		"happy-dom": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue-tsc": "catalog:"
	}
}