{
	"name": "@vrgl/vergil",
	"version": "0.17.0",
	"license": "MIT",
	"private": false,
	"description": "Vue Components and Composition Utilities",
	"author": "Octavio Araiza (https://github.com/8ctavio)",
	"homepage": "https://github.com/8ctavio/vergil",
	"bugs": "https://github.com/8ctavio/vergil/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/8ctavio/vergil.git",
		"directory": "packages/vergil"
	},
	"type": "module",
	"scripts": {
		"lint": "oxlint",
		"dts": "vue-tsc -p ./tsconfig.src.json",
		"test": "vitest run",
		"test:prod": "vitest run --typecheck.tsconfig ./tsconfig.tests.prod.json",
		"typecheck": "pnpm typecheck:src && pnpm typecheck:tests",
		"typecheck:src": "vue-tsc -p ./tsconfig.src.json --noEmit",
		"typecheck:tests": "vue-tsc -p ./tsconfig.tests.json",
		"typecheck:tests:prod": "vue-tsc -p ./tsconfig.tests.json --customConditions null"
	},
	"files": ["dts/", "src/", "!src/**/*.ts", "!src/styles/color-palette.md"],
	"exports": {
		".": {
			"types": "./dts/index.types.d.ts",
			"import": "./src/index.js"
		},
		"./components": {
			"types": "./dts/components/.entries/public.types.d.ts",
			"import": "./src/components/.entries/public.js"
		},
		"./utilities": {
			"types": "./dts/utilities/.entries/public.types.d.ts",
			"import": "./src/utilities/.entries/public.js"
		},
		"./plugins": {
			"types": "./dts/plugins/index.d.ts",
			"import": "./src/plugins/index.js"
		},
		"./utilities/userTheme": {
			"types": "./dts/utilities/userTheme/index.d.ts",
			"import": "./src/utilities/userTheme/index.js"
		},
		"./styles": "./src/styles/main.css",
		"./colors/*": "./src/styles/colors/*.css",
		"./colors/default": "./src/styles/default.css"
	},
	"imports": {
		"#utilities": {
			"types": {
				"dev": "./src/utilities/.entries/private.types.ts",
				"default": "./dts/utilities/.entries/private.types.d.ts"
			},
			"import": "./src/utilities/.entries/private.js"
		},
		"#reactivity": {
			"types": {
				"dev": "./src/reactivity/.entries/private.types.ts",
				"default": "./dts/reactivity/.entries/private.types.d.ts"
			},
			"import": "./src/reactivity/.entries/private.js"
		},
		"#vergil": {
			"types": {
				"dev": "./src/vergil.types.ts",
				"default": "./dts/vergil.types.d.ts"
			},
			"import": "./src/vergil.js"
		},
		"#composables": {
			"types": {
				"dev": "./src/composables/.entries/private.types.ts",
				"default": "./dts/composables/.entries/private.types.d.ts"
			},
			"import": "./src/composables/.entries/private.js"
		},
		"#components": {
			"types": {
				"dev": "./src/components/.entries/private.types.ts",
				"default": "./dts/components/.entries/private.types.d.ts"
			},
			"import": "./src/components/.entries/private.js"
		},
		"#components/*.vue": {
			"types": {
				"dev": "./src/components/*.vue",
				"default": "./dts/components/*.vue.d.ts"
			},
			"import": "./src/components/*.vue"
		},
		"#*": {
			"types": {
				"dev": "./src/*.js",
				"default": "./dts/*.d.ts"
			},
			"import": "./src/*.js"
		}
	},
	"dependencies": {
		"@floating-ui/vue": "catalog:consumer"
	},
	"peerDependencies": {
		"nuxt": "catalog:consumer",
		"vue": "catalog:consumer",
		"vue-router": "catalog:consumer"
	},
	"peerDependenciesMeta": {
		"nuxt": {
			"optional": true
		},
		"vue-router": {
			"optional": true
		}
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "catalog:",
		"@vue/test-utils": "catalog:",
		"happy-dom": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vue-tsc": "catalog:"
	}
}