{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"customConditions": ["dev"],
		"target": "esnext",
		"skipLibCheck": true,
		"moduleDetection": "force",
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
	}
}